{
    "name": "thx_wallet",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "truffle": "truffle",
        "deploy:firebase": "NETWORK=extdev yarn build; firebase deploy",
        "deploy": "truffle deploy --network loom_dapp_chain",
        "deploy:reset": "truffle deploy --reset --network loom_dapp_chain",
        "deploy:ganache": "truffle deploy --network ganache",
        "deploy:reset:ganache": "truffle deploy --reset --network ganache",
        "deploy:extdev": "truffle deploy --network extdev_plasma_us1",
        "deploy:reset:extdev": "truffle deploy --reset --network extdev_plasma_us1",
        "deploy:rinkeby": "truffle deploy --network rinkeby",
        "deploy:reset:rinkeby": "truffle deploy --reset --network rinkeby",
        "test:ganache": "truffle test --network ganache",
        "serve:ganache": "NETWORK=ganache yarn run serve",
        "serve:extdev": "NETWORK=extdev yarn run serve",
        "gen:rinkeby-key": "node ./scripts/gen-eth-key.js rinkeby",
        "gen:extdev-key": "npm run loom:install && ./loom/loom genkey -k extdev_private_key -a extdev_public_key",
        "gen:extdev-newkey": "npm run loom:install && ./loom/loom genkey -k extdev_private_key_new -a extdev_public_key_new",
        "gen:loom-key": "npm run loom:install && ./loom/loom genkey -k loom_private_key -a loom_public_key",
        "loom:install": "mkdir ./loom; cd ./loom; curl https://raw.githubusercontent.com/loomnetwork/loom-sdk-documentation/master/scripts/get_loom.sh | sh; cd ../;",
        "loom:init": "cd ./loom; ./loom init -f; cd ../;",
        "loom:run": "cd ./loom; ./loom run;",
        "ganache:run": "ganache-cli --accounts=10 --defaultBalanceEther=10 --gasPrice=10225000000 --gasLimit=8500000",
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "test:unit": "vue-cli-service test:unit",
        "test:e2e": "vue-cli-service test:e2e",
        "lint": "vue-cli-service lint"
    },
    "dependencies": {
        "axios": "^0.19.0",
        "bootstrap": "^4.3.1",
        "bootstrap-vue": "^2.0.4",
        "core-js": "^3.1.2",
        "dotenv": "^6.2.0",
        "ethereum-input-data-decoder": "^0.3.0",
        "firebase": "^6.2.4",
        "lodash": "^4.17.14",
        "loom-js": "1.70.0",
        "loom-truffle-provider": "^0.11.0",
        "register-service-worker": "^1.6.2",
        "vue": "^2.6.10",
        "vue-class-component": "^7.0.2",
        "vue-moment": "^4.0.0",
        "vue-property-decorator": "^8.1.0",
        "vue-qrcode-reader": "^2.0.4",
        "vue-router": "^3.0.6",
        "vuex": "^3.0.1",
        "web3": "1.2.1"
    },
    "devDependencies": {
        "@types/chai": "^4.1.0",
        "@types/mocha": "^5.2.4",
        "@vue/cli-plugin-babel": "^4.0.0",
        "@vue/cli-plugin-e2e-nightwatch": "^4.0.0",
        "@vue/cli-plugin-pwa": "^4.0.0",
        "@vue/cli-plugin-typescript": "^4.0.0",
        "@vue/cli-plugin-unit-mocha": "^4.0.0",
        "@vue/cli-service": "^4.0.0",
        "@vue/test-utils": "1.0.0-beta.29",
        "chai": "^4.1.2",
        "chromedriver": "77",
        "ganache-time-traveler": "^1.0.3",
        "geckodriver": "^1.16.2",
        "openzeppelin-solidity": "^2.3.0",
        "sass": "^1.19.0",
        "sass-loader": "^8.0.0",
        "truffle": "5.0.1",
        "truffle-hdwallet-provider": "^1.0.2",
        "truffle-privatekey-provider": "^1.3.0",
        "typescript": "~3.5.3",
        "vue-template-compiler": "^2.6.10"
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions"
    ]
}
