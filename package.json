{
    "name": "thx_wallet",
    "version": "0.1.2",
    "private": true,
    "scripts": {
        "truffle": "truffle",
        "serve": "vue-cli-service serve --mode development; firebase use thx-wallet-dev; ",
        "build": "vue-cli-service build --mode development; firebase use thx-wallet-dev;",
        "build:dev": "vue-cli-service build --mode development",
        "build:prod": "vue-cli-service build --mode production",
        "deploy:api:dev": "firebase use thx-wallet-dev; firebase deploy --only functions:api",
        "deploy:api:prod": "firebase use thx-wallet-prod; firebase deploy --only functions:prod",
        "deploy:slack:dev": "firebase use thx-wallet-dev; firebase deploy --only functions:slack",
        "deploy:slack:prod": "firebase use thx-wallet-prod; firebase deploy --only functions:prod",
        "deploy:prod": "NETWORK=extdev vue-cli-service build --mode production; firebase use thx-wallet-prod; firebase deploy --only hosting:thx-wallet-prod",
        "deploy:dev": "NETWORK=extdev vue-cli-service build --mode development; firebase use thx-wallet-dev; firebase deploy --only hosting:thx-wallet-dev",
        "deploy:extdev": "truffle deploy --network extdev_plasma_us1",
        "deploy:reset:extdev": "truffle deploy --reset --network extdev_plasma_us1",
        "deploy:rinkeby": "truffle deploy --network rinkeby",
        "deploy:reset:rinkeby": "truffle deploy --reset --network rinkeby",
        "compile-contracts": "truffle compile",
        "map-contracts": "node ./gateway-cli.js map-contracts coin",
        "test:unit": "vue-cli-service test:unit",
        "test:e2e": "vue-cli-service test:e2e",
        "lint": "vue-cli-service lint"
    },
    "dependencies": {
        "@types/lodash": "^4.14.149",
        "axios": "^0.19.2",
        "bootstrap": "^4.3.1",
        "bootstrap-vue": "^2.9.0",
        "core-js": "^3.1.2",
        "dotenv": "^6.2.0",
        "ethereum-input-data-decoder": "^0.3.0",
        "firebase": "^6.2.4",
        "lodash": "^4.17.14",
        "loom-js": "1.70.0",
        "loom-truffle-provider": "^0.11.0",
        "register-service-worker": "^1.6.2",
        "vue": "^2.6.10",
        "vue-class-component": "^7.0.2",
        "vue-moment": "^4.0.0",
        "vue-property-decorator": "^8.1.0",
        "vue-qrcode-reader": "^2.0.4",
        "vue-router": "^3.0.6",
        "vuex": "^3.0.1",
        "web3": "1.2.1"
    },
    "devDependencies": {
        "@types/chai": "^4.1.0",
        "@types/mocha": "^5.2.4",
        "@vue/cli-plugin-babel": "^4.0.0",
        "@vue/cli-plugin-e2e-nightwatch": "^4.0.0",
        "@vue/cli-plugin-pwa": "^4.0.0",
        "@vue/cli-plugin-typescript": "^4.0.0",
        "@vue/cli-plugin-unit-mocha": "^4.0.0",
        "@vue/cli-service": "^4.0.0",
        "@vue/test-utils": "1.0.0-beta.29",
        "chai": "^4.1.2",
        "chromedriver": "77",
        "ganache-time-traveler": "^1.0.3",
        "geckodriver": "^1.16.2",
        "openzeppelin-solidity": "^2.3.0",
        "sass": "^1.19.0",
        "sass-loader": "^8.0.0",
        "truffle": "5.0.1",
        "truffle-hdwallet-provider": "^1.0.2",
        "truffle-privatekey-provider": "^1.3.0",
        "typescript": "~3.5.3",
        "vue-template-compiler": "^2.6.10"
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions"
    ]
}
